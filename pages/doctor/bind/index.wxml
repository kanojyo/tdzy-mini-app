<view class="main">
  <view class="hospital-title">欢迎来到泰斗医疗</view>
  <view class="tips">完善信息,前往立即预约</view>

  <form bindsubmit="formSubmit" bindreset="formReset">
    <radio-group name="sex"  class="sex">
        <label bindtab="sexChange">
          <image src="../../../images/u904.png" class="img"></image>
          <radio value="1" class="radio">男</radio>
        </label>
        <label bindtab="sexChange">
          <image src="../../../images/u873.png" class="img"></image>
          <radio value="2" class="radio">女</radio>
          
        </label>
    </radio-group>
    <view class="form-input">
      <label>姓名</label>
      <input type="text" placeholder="请填写真实姓名,方便预约挂号（必填）" name="name" bindinput="getWords" maxlength='{{maxTextLen}}' />
    </view>

    <view class="form-input">
      <label>年龄</label>
      <picker-view class="select-box"  bindchange="bindChange" indicator-style="height: 50px;" value="{{value}}">
        <picker-view-column>
          <view class="age-list">请选择年龄</view>
          <view wx:for="{{age}}" wx-key="index" class="age-list">{{item}}</view>
        </picker-view-column>
        
      </picker-view>
    </view>
    

    <view class="form-input">
      <label>手机号</label>
      <input type="text" placeholder="请输入您的手机号（必填）" name="mobile"/>
    </view>

    <view class="bottom-tip">为医护人员能够准确核实您的信息,请您认真填写</view>
    <button class="bind-userinfo" form-type="submit">保存</button>
  </form>
</view>