/* pages/doctor/order/index.wxss */
@import "../../../pages/index/index.wxss";

.content > view {
  display: inline-block;
}

.content {
  position: relative;
  padding-top: 20rpx;
}
.avatar {
 position: absolute;
 top: 30rpx;
}

.order-tips {
  width: 100%;
  font-size: 24rpx;
  padding: 20rpx;
  background-color: #F2F2F2;
}

.intro {
  margin-bottom: 0;
}

.order-rule {
  width: 160rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  font-size: 24rpx;
  position: absolute;
  right: 2%;
  border-radius: 60rpx;
  color: red;
  background-color: #fff;
  border : 1px solid #ccc;
}

.order-list {
  background-color: #fff;
  width: 100%;
  padding-top: 20rpx;
}

.order-content {
  width: 100%;
  border-bottom: 2rpx solid #ccc;
  padding: 2% 0 20rpx 2%;
}

.order-day {
  font-size: 32rpx;
}

.order-time {
  font-size: 28rpx;
  color: #666;
}

.order-time-box, .order-price {
  float: left;
}

.order-price {
  font-size: 30rpx;
  color: #0000FF;
}
.order-btn {
  float: right;
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
  border-radius: 30rpx;
  margin-right: 4%;
}

.success {
  background-color: #00CC66;
}

.fail {
  background-color: #999999;
}