<!--index.wxml-->
<view class="container">
  <swiper class="banner" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}">
    <block wx:for="{{imgUrls}}" wx:key="item.id">
      <swiper-item>
        <image src="{{item}}" class="slide-image"/>
      </swiper-item>
    </block>
  </swiper>
  <view class="office">
    <view class="office-item" wx:for="{{officeList}}" wx:key="item.id">
      <image class="icon" src="{{item.img}}"></image>
      <text>{{item.text}}</text>
    </view>
  </view>
  <view class='intro'>
    <view class="title">
      <view class="hospital">泰斗中医院</view>
      <view class="more">
        <text>医院导航</text>
        <image src="https://whmycs.oss-cn-hangzhou.aliyuncs.com/applet/index/HospitalNavigation@2x.png"></image>
      </view>
    </view>
    <image src="https://images.unsplash.com/photo-1551334787-21e6bd3ab135?w=640"></image>
  </view>
  <view class='intro doctor-recommend'>
    <view class="title">
      <view class="hospital">名医推荐</view>
      <view class="more">
        <text>更多</text>
        <image src="https://whmycs.oss-cn-hangzhou.aliyuncs.com/applet/index/HospitalNavigation@2x.png"></image>
      </view>
    </view>
    <view class="content"></view>
  </view>
</view>