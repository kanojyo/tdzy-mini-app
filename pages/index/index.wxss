/**index.wxss**/
.container{
  background-color: #ededed;
}
.banner{
  width: 100%;
  height: 400rpx;
}
.banner .slide-image{width: 100%;}
.office{
  width: 100%;
  height: 190rpx;
  display: flex;
  padding-top: 50rpx;
  background-color: #fff;
  margin-bottom: 16rpx;
}
.office-item{
  height:auto;
  flex:1;
  display: flex;
  flex-direction:column;
  text-align: center;
}
.office-item .icon{
  width:78rpx;
  height: 78rpx;
  margin:0 auto;
}
.office-item text{
  padding-top: 20rpx;
  color:#666;
  font-size: 24rpx;
}
.intro{
  background: #fff;
  width: 100%;
  margin-bottom: 16rpx;
}
.intro .title{
  display: flex;
  justify-content:space-between;
  padding: 0 30rpx;
  height: 74rpx;
  line-height: 74rpx;
}
.hospital{
  font-size: 36rpx;
  position: relative;
  padding-left: 16rpx;
}
.hospital::before{
  content: '';
  position: absolute;
  height: 36rpx;
  width: 4rpx;
  background-color:#e60012;
  left: 0;
  top: 19rpx;
}
.intro .title .more{
  display: flex;
  align-items:center;
}
.intro .title .more text{
  font-size: 24rpx;
}
.intro .title .more image{
  width: 41rpx;
  height: 43rpx;
  margin-left: 10rpx;
}
.intro>image{width: 100%;}