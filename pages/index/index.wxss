/**index.wxss**/
.container{
  background-color: #ededed;
}
.shouquan{
  width: 100%;
  height: 1334rpx;
  background-color: #ededed;
}
.header {
    margin: 90rpx 0 20rpx 0;
    /* border-bottom: 1px solid #ccc; */
    text-align: center;
    width: 100%;
    height: 300rpx;
    line-height: 450rpx;
}
.header image {
    width: 200rpx;
    height: 200rpx;
}
.shouquan .content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
    text-align: center;
}
.shouquan .content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}
 
.bottom {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
}
.banner{
  width: 100%;
  height: 400rpx;
}
.banner .slide-image{width: 100%;}
.office{
  width: 100%;
  height: 190rpx;
  display: flex;
  padding-top: 50rpx;
  background-color: #fff;
  margin-bottom: 16rpx;
}
.office-item{
  height:auto;
  flex:1;
  display: flex;
  flex-direction:column;
  text-align: center;
}
.office-item .icon{
  width:78rpx;
  height: 78rpx;
  margin:0 auto;
}
.office-item text{
  padding-top: 20rpx;
  color:#666;
  font-size: 24rpx;
}
.intro{
  background: #fff;
  width: 100%;
  margin-bottom: 16rpx;
}
.intro>.title{
  display: flex;
  justify-content:space-between;
  padding: 0 30rpx;
  height: 74rpx;
  line-height: 74rpx;
}
.hospital{
  font-size: 36rpx;
  position: relative;
  padding-left: 16rpx;
}
.hospital::before{
  content: '';
  position: absolute;
  height: 36rpx;
  width: 4rpx;
  background-color:#e60012;
  left: 0;
  top: 19rpx;
}
.intro .title .more{
  display: flex;
  align-items:center;
}
.intro .title .more text{
  font-size: 24rpx;
}
.intro .title .more image{
  width: 41rpx;
  height: 43rpx;
  margin-left: 10rpx;
}
.intro>image{width: 100%;}
.doctor-recommend .content{}
.doctor-recommend .content .item{
  border-top:1rpx solid #efefef;
  padding: 50rpx 30rpx 30rpx 30rpx;
  display: flex;
}
.doctor-recommend .content .avatar{
  height: 130rpx;
  width: 130rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}
.doctor-recommend .content .item-avatar .text{
  height: 36rpx;
  width: 118rpx;
  text-align: center;
  background: url('https://whmycs.oss-cn-hangzhou.aliyuncs.com/applet/index/recommend@2x.png');
  background-size: contain;
  color:#fff;
  font-size: 22rpx;
}
.doctor-recommend .content .item-content .item-name{
  
  display: flex;
  justify-content: space-between;
}
.doctor-recommend .content .item-content{
  padding-left: 20rpx;
  width: 100%;
}
.doctor-recommend .content .item-content .name{
  font-size: 34rpx;
  color:#333;
}
.doctor-recommend .content .item-content .position{
  font-size: 26rpx;
  color:#666;
  padding-left: 10rpx;
}
.doctor-recommend .content .item-content .btn{
  font-size: 22rpx;
  color:#fff;
  background: #dd5335;
  border-radius: 8rpx;
  margin:0;
}
.doctor-recommend .content .item-content .item-desc{
  font-size: 26rpx;
  color:#666;
}
.doctor-recommend .content .item-content .item-label{
  display: flex;
  font-size: 24rpx;
  color:#d2b576;
  margin-top: 24rpx;
}
.doctor-recommend .content .item-content .item-label .label{
  border:1rpx solid #d2b576;
  border-radius: 4rpx;
  padding: 0 8rpx;
}
.doctor-recommend .content .item-content .item-label .label+.label{
  margin-left: 10rpx;
}
.hot-recommend .content .item{
  padding: 20rpx 30rpx 0 30rpx;
  height: 163rpx;
  border-top:1rpx solid #efefef;
  display: flex;
}
.hot-recommend .content .item .item-img{
  width: 224rpx;
  height: 134rpx;
}
.hot-recommend .content .item .item-img image{
  width: 224rpx;
  height: 134rpx;
}
.hot-recommend .content .item-text{
  padding-left: 20rpx;
  width: 436rpx;
}
.hot-recommend .content .item-text .title{
  font-size: 30rpx;
  color:#333;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  display: block;
}
.hot-recommend .content .item-text .desc{
  font-size: 26rpx;
  color:#666;
  display: block;
  margin-top: 16rpx;
}