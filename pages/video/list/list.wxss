/* pages/video/list/list.wxss */

.video-list{
  padding: 0 30rpx;
}

.video-list .video-info:last-child{
  /* border: none; */
}

.video-info {
  padding-top: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #efefef;
}

.video-info .title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333333;
}

.video-info .image {
  margin-top: 19rpx;
  position: relative;
}

.video-info .image, .video-info .image image {
  height: 320rpx;
  width: 100%;
}

.video-info .image .bofang {
  width: 106rpx;
  height: 106rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.video-info .image .time {
  position: absolute;
  padding:5rpx 20rpx;
  bottom: 20rpx;
  right: 30rpx;
  font-size: 26rpx;
  background-color: #333333;
  opacity: 0.5;
  color: #fff;
  text-align: center;
  border-radius: 32rpx;
}



.video-info .logo {
  height: 62rpx;
  margin-top: 20rpx;
}

.logo image {
  width: 62rpx;
  height: 62rpx;
  vertical-align: middle;
  border-radius: 50%;
}

.logo text {
  font-size: 28rpx;
  color: #333333;
  margin-left: 10rpx;
  vertical-align: middle;
}

.nodata{
  width: 100%;
  display: flex;
  flex-direction:column;
  align-items:center;
  /* background: #f2f2f2; */
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.nodata image{
  width: 494rpx;
}
.nodata text{
  margin-top: 30rpx;
  font-size: 36rpx;
  color:#666;
}