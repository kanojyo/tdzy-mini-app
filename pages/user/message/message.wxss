/* pages/user/message/message.wxss */
page{
  background: #f2f2f2;
}
.message{
  padding: 30rpx 30rpx;
  width: 690rpx;
}
.item{
  padding: 30rpx 30rpx;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 8rpx;
}
.item .title{
  font-size: 32rpx;
  color:#333;
  font-weight: bold;
}
.item .title .new{
  color:#fc1618;
  margin-right: 20rpx;
}
.item .time{
  margin-top: 20rpx;
  color:#666;
  font-size: 26rpx;
}
.item .img{
  margin-top: 30rpx;
  width: 100%;
  height: auto !important;
}
.item .img image{
  width: 100%;
}
.noData{
  padding-top: 100rpx;
  width: 100%;
  display: flex;
  flex-direction:column;
  align-items:center;
}
.noData image{
  width: 494rpx;
}
.noData text{
  margin-top: 30rpx;
  font-size: 36rpx;
  color:#666;
}