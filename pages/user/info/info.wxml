<!--pages/user/info/info.wxml-->
<view class="container">
  <view class="item">
    <text>我的头像</text>
    <image class="avatar" src="{{info.avatarurl}}"></image>
  </view>
  <view class="item">
    <text>姓名</text>
    <text>{{info.name}}</text>
  </view>
  <view class="item">
    <text>性别</text>
    <text wx:if="{{info.gender==1}}">男</text>
    <text wx:if="{{info.gender==2}}">女</text>
  </view>
  <view class="item">
    <text>年龄</text>
    <text>{{info.age}}</text>
  </view>
  <view class="item">
    <text>手机号</text>
    <text>{{info.mobile}}</text>
  </view>
</view>
