<!--pages/user/info/info.wxml-->
<view class="container">
  <view class="item">
    <text class="label">我的头像</text>
    <image class="avatar" src="{{info.avatarurl}}"></image>
  </view>
  <view class="item">
    <text class="label">姓名</text>
    <text class="txt">{{info.name}}</text>
  </view>
  <view class="item">
    <text class="label">性别</text>
    <text class="txt" wx:if="{{info.gender==1}}">男</text>
    <text class="txt" wx:if="{{info.gender==2}}">女</text>
  </view>
  <view class="item">
    <text class="label">年龄</text>
    <text class="txt">{{info.age}}</text>
  </view>
  <view class="item">
    <text class="label">手机号</text>
    <text class="txt">{{info.mobile}}</text>
  </view>
</view>