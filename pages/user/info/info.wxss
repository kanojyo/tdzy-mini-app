/* pages/user/info/info.wxss */
.container{
  padding: 10rpx 0rpx;
}
.item{
  padding: 0 30rpx;
  width: 690rpx;
  border-bottom: 1rpx solid #ededed;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  height: 82rpx;
  line-height: 82rpx;
  align-items:center;
}
.item .avatar{
  height: 66rpx;
  width: 66rpx;
  border-radius: 50%;
}
.item .avatar image{
  height: 80rpx;
  width: 80rpx;
}
.item .label{
  font-size: 30rpx;
  color:#333;
}
.item .txt{
  font-size: 28rpx;
  color:#666;
}