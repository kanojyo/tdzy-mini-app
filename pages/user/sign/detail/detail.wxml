<swiper class="banner" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="{{circular}}">
  <block wx:for="{{img}}" wx:key="index">
    <swiper-item>
      <image src="{{item}}" class="slide-image"  mode='aspectFill'></image>
    </swiper-item>
  </block>
</swiper>
<view class="good-info">
  
  <image src="../../../../images/gold.png"></image>
  
  <view class='score-info'>
    <view >
      <text class="score-now">1000</text>
      <text class="score-old">2000</text>
    </view>
  </view>
  <view class='title'>泰斗中医院针灸1次</view>
  <view class='my-score'>我的积分：20000</view>
</view>

<view class="good-nav">
  <view class='nav-header'>
    <view data-current="0" class="title {{menuTapCurrent == 0 ? 'active' : ''}}" catchtap="menuTap">详情</view>
    <view data-current="1" class="title {{menuTapCurrent == 1 ? 'active' : ''}}" catchtap="menuTap">说明</view>
    <view class="content" hidden="{{menuTapCurrent!='0'}}">
      111
    </view>
    <view class="content" hidden="{{menuTapCurrent!='1'}}">
      {{goods.goods_rules}}
    </view>
  </view>

  <!--内容，可以选择包一起，我是直接少包了一层-->
    
</view>
