/* pages/user/sign/sign.wxss */
.container{position: relative;}
page{
  background:#f2f2f2; 
}
.info{
  width: 690rpx;
  padding: 30rpx 30rpx;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  color:#333;
  padding-bottom: 30rpx;
  border-bottom:1rpx solid #efefef;
  background:#fff;
}
.userInfo{
  display: flex;
}
.avatar{
  height: 120rpx;
  width: 120rpx;
}
.avatar image{
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
}
.userInfo .text{
  padding-left: 30rpx;
}
.userInfo .text .nickName{
  color:#000;
  font-size: 32rpx;
  width: 380rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.userInfo .text .jifen{
  color:#333;
  font-size: 30rpx;
  margin-top:10rpx;
  position: relative;
}
.userInfo .text .jifen::after{
  content: '';
  position: absolute;
  height: 0;
  width: 0;
  border-top:6px solid transparent;
  border-bottom:6px solid transparent;
  border-left:6px solid #d1b574;
  left: 130rpx;
  top:12rpx;
  
}
.userInfo .text .score{
  color:#ff0000;
  font-size: 46rpx;
}

.info .rules{
  height: 50rpx;
  border:1rpx solid #d1b574;
  padding: 0 20rpx;
  border-radius: 10rpx;
  color:#d1b574;
}
.sign{
  width: 690rpx;
  padding: 20rpx 30rpx;
  background: #fff;
}
.sign>.text{
  text-align: center;
  font-size: 30rpx;
  height: 90rpx;
  color:#000;
}
.sign .text .red{
  color:#ff0000;
}
.sign .tab{
  border-top:2rpx dashed #efefef;
  margin-top:10rpx;
  /* height: 60rpx; */
  /* margin: 0 30rpx; */
}
.sign .tab .tab-ul{
  width: 100%;
  display: flex;
  /* height: 60rpx; */
  justify-content:space-between;
  margin-bottom: 40rpx;
}
.sign .tab .tab-ul .tab-item{
  /* flex: 1; */
  position: relative;
  width: 50rpx;
}
.sign .tab .tab-ul .tab-item .score{
  display: flex;
  justify-content:center;
  align-items:center;
  height: 61rpx;
  position: absolute;
  top:-45rpx;
}
.sign .tab-item .score image{
  width: 42rpx;
}
.sign .tab-item .score .img_10{
  height: 42rpx;
  margin-top:19rpx;
}
.sign .tab-item .score .img_40{
  height: 61rpx;
}
.sign .tab-item .date{
  font-size: 18rpx;
  margin-top: 36rpx;
}
.sign .tab .underline{
  /* width: 92%; */
  margin: 0 40rpx;
  height: 2rpx;
  background: #bfbfbf;
}
.sign .tab .line{
  border-top:2rpx solid #bfbfbf;
  height: 48rpx;
  justify-content:space-between;
  position: relative;
  width: 100%;
}
.sign .tab .line .tab-item{
  width: 27rpx;
  
}
.sign .tab .line .tab-item .bot{
  position: absolute;
  height: 48rpx;
  top:-25rpx;
  z-index: 100;
}
.sign .tab-item .score .gouxuan{
  height: 34rpx;
  width: 34rpx;
}
.sign .tab-item .score .yuan{
  height: 27rpx;
  width: 27rpx;
}
.hot{
  width: 690rpx;
  padding: 30rpx 30rpx;
  background: #fff;
  margin-top: 10rpx;
}
.hot>.title{
  font-size: 36rpx;
  color:#333;
  padding-left: 30rpx;
  position: relative;
}
.hot>.title::before{
  content: '';
  position:absolute;
  width: 6rpx;
  height: 36rpx;
  background: #ff0000;
  left: 0;
  top:10rpx;
}
.hot .content .item{
  padding:20rpx 0 30rpx 0;
  display: flex;
  border-bottom:1rpx solid #efefef;
}
.hot .content .item .img{
  width:250rpx;
  height: 184rpx;
}
.hot .content .item .img image{
  width:250rpx;
  height: 184rpx;
}
.hot .content .item .text{
  padding-left: 20rpx;
  display: flex;
  flex-direction:column;
  justify-content:space-between;
  width: 100%;
}
.hot .content .item .text .title{
  width: 370rpx;
  font-size: 30rpx;
  color:#333;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.hot .content .item .text .bot .left{
  width: 160rpx;
  padding-left: 40rpx;
  background: url('https://taidouapp.oss-cn-hangzhou.aliyuncs.com/xiaochengxu/sign/_jinbi-2%402x.png') left 10rpx no-repeat;
  background-size: 16%;
}
.hot .content .item .text .bot .left .now_score{
  font-size: 32rpx;
  color:#fd4f0a;
}
.hot .content .item .text .bot .left .orgin{
  font-size: 24rpx;
  color:#999;
  text-decoration: line-through;
}
.hot .content .item .text .bot{
  display: flex;
  justify-content: space-between;
  width: 100%;
}
.hot .content .item .text .bot .right button{
  font-size: 24rpx;
  padding-left:13rpx; 
  padding-right:13rpx; 
  border-radius: 4rpx;
}
.hot .content .item .text .bot .right .btn1{
  background: #d1b574;
  color:#fff;
  height: 46rpx;
  line-height: 46rpx;
}
.hot .content .item .text .bot .right .btn2{
  background: #bfbfbf;
  color:#fff;
  height: 46rpx;
  line-height: 46rpx;
}
.shade{
  position: absolute;
  width: 100%;
  background: rgba(0,0,0,.2);
  z-index:100;
}
/* .shade .content{
  height: 100%;
  width: 100%;
} */
.bg{
  position: fixed;
  height: 740rpx;
  width: 664rpx;
  background: url('https://taidouapp.oss-cn-hangzhou.aliyuncs.com/xiaochengxu/sign/qiandao-%402x.png') left top no-repeat;
  background-size: contain;
  left:43rpx;
  top:120rpx;
  display: flex;
  flex-direction:column;
  text-align: center;
  z-index:1000;
}
.bg .title{
  padding-top: 310rpx;
  font-size: 40rpx;
  color:#000;
}
.bg .score{
  font-size: 74rpx;
  color:#d02424;
}
.bg .text{
  font-size: 30rpx;
  color:#333;
}
.bg .btn{
  width:340rpx;
  font-size: 40rpx;
  margin:20rpx auto;
  /* padding: 0 130rpx; */
  border-radius: 20rpx;
  background: #d1b574;
  color:#fff;
}