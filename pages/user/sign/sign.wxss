/* pages/user/sign/sign.wxss */
.container{position: relative;}
page{
  background:#ededed; 
}
.info{
  width: 690rpx;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  color:#333;
  padding-bottom: 30rpx;
  border-bottom:1rpx solid #efefef;
  background:#fff;
}
.userInfo{
  display: flex;
}
.avatar{
  height: 120rpx;
  width: 120rpx;
}
.avatar image{
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
}
.userInfo .text{
  padding-left: 30rpx;
}
.userInfo .text .nickName{
  color:#000;
  font-size: 32rpx;
}
.userInfo .text .jifen{
  color:#333;
  font-size: 30rpx;
  margin-top:10rpx;
  position: relative
}
.userInfo .text .jifen::after{
  content: '';
  position: absolute;
  height: 0;
  width: 0;
  border-top:6px solid transparent;
  border-bottom:6px solid transparent;
  border-left:6px solid #d1b574;
  right: -20rpx;
  top:12rpx;
  
}
.userInfo .text .score{
  color:#ff0000;
  font-size: 46rpx;
}

.info .rules{
  height: 50rpx;
  border:1rpx solid #d1b574;
  padding: 0 20rpx;
  border-radius: 10rpx;
  color:#d1b574;
}
.sign{
  width: 690rpx;
  padding: 20rpx 30rpx;
  background: #fff;
}
.sign .text{
  text-align: center;
  font-size: 30rpx;
  color:#000;
}
.sign .text .red{
  color:#ff0000;
}
.hot{
  width: 690rpx;
  padding: 30rpx 30rpx;
  background: #fff;
  margin-top: 10rpx;
}
.hot>.title{
  font-size: 36rpx;
  color:#333;
  padding-left: 30rpx;
  position: relative;
}
.hot>.title::before{
  content: '';
  position:absolute;
  width: 6rpx;
  height: 36rpx;
  background: #ff0000;
  left: 0;
  top:10rpx;
}
.hot .content .item{
  margin:20rpx 0;
  display: flex;
}
.hot .content .item .img{
  width:340rpx;
  height: 180rpx;
}
.hot .content .item .img image{
  width:340rpx;
  height: 180rpx;
}
.hot .content .item .text{
  padding-left: 20rpx;
  display: flex;
  flex-direction:column;
  justify-content:space-between;
  width: 100%;
}
.hot .content .item .text .title{
  font-size: 30rpx;
  color:#333;
}
.hot .content .item .text .bot .left{
  padding-left: 30rpx;
  background: url('https://taidouapp.oss-cn-hangzhou.aliyuncs.com/xiaochengxu/sign/_jinbi-2%402x.png') left 10rpx no-repeat;
  background-size: 24%;
}
.hot .content .item .text .bot .left .now_score{
  font-size: 32rpx;
  color:#d1b574;
}
.hot .content .item .text .bot .left .orgin{
  font-size: 24rpx;
  color:#999;
  text-decoration: line-through;
}
.hot .content .item .text .bot{
  display: flex;
  justify-content: space-between;
  width: 100%;
}
.hot .content .item .text .bot .right button{
  font-size: 30rpx;
  padding-left:15rpx; 
  padding-right:15rpx; 
}
.hot .content .item .text .bot .right .btn1{
  background: #d1b574;
  color:#fff;
}
.hot .content .item .text .bot .right .btn2{
  background: #bfbfbf;
  color:#fff;
}
.shade{
  position: absolute;
  width: 100%;
  background: rgba(0,0,0,.2);
  z-index:10;
}
/* .shade .content{
  height: 100%;
  width: 100%;
} */
.bg{
  position: fixed;
  height: 740rpx;
  width: 664rpx;
  background: url('https://taidouapp.oss-cn-hangzhou.aliyuncs.com/xiaochengxu/sign/qiandao-%402x.png') left top no-repeat;
  background-size: contain;
  left:43rpx;
  top:120rpx;
  display: flex;
  flex-direction:column;
  text-align: center;
}
.bg .title{
  padding-top: 300rpx;
  font-size: 40rpx;
  color:#000;
}
.bg .score{
  font-size: 74rpx;
  color:#d02424;
}
.bg .text{
  font-size: 30rpx;
  color:#333;
}
.bg .btn{
  font-size: 40rpx;
  margin-top:20rpx;
  padding: 0 130rpx;
  border-radius: 20rpx;
  background: #d1b574;
  color:#fff;
}