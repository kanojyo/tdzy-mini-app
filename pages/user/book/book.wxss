/* pages/user/book/book.wxss */
.container{
  background-color: #ededed;
}
page{
    background-color: #FFFFFF;
}
.topTabSwiper{
  display: flex;
  width: 100%;
  background: #fff;
}
.tab{
  flex:1;
  text-align: center;
  padding: 10rpx 0;
  font-size: 30rpx;
  color:#666;
}
.topTabSwiper:after{content: ""; clear: both;display: block;}
.tabBorer{border-bottom: 4rpx solid #d2b576; color:#d1b574;}
.swiper{
  width: 100%;
}
.swiper .tab-item{
  display: none;
}
.swiper .swiper_con{
  display: block;
  width: 100%;
}
.list .item{
  padding: 20rpx 30rpx 0 30rpx;
  height: auto;
  border-top:1rpx solid #efefef;
  background: #fff;
  margin-bottom: 10rpx;
}
.title{
  width: 100%;
  display: flex;
  padding: 10rpx 0;
  justify-content: space-between;
  font-size: 30rpx;
  color:#333;
  border-bottom:1rpx solid #efefef;
}
.item-content{
  padding: 16rpx 0;
  display: flex;
}
.item-content .avatar{
  width: 100rpx;
  height: 100rpx;
}
.item-content .avatar image{
  width: 100rpx;
  height: 100rpx;
}
.item-content .text{
  width: 80%;
  margin-left: 20rpx;
  font-size: 30rpx;
  color:#333;
}
.item-content .text view{padding: 5rpx 0}
.week{padding-left: 10rpx;}
.time_slot{margin-left: 146rpx;}
.user{
  display: flex;
  font-size: 30rpx;
  color:#333;
  justify-content: space-between;
  padding: 10rpx 0;
}
.user .info{
  height: 100%;
}
.user .info text{
  height: 100%;
  line-height: 70rpx;
  margin-right: 20rpx;
}
.user .btn button{
  font-size: 30rpx;
}


.list1 .item .item-content .text{
  background: url('https://taidouapp.oss-cn-hangzhou.aliyuncs.com/xiaochengxu/user/weiSeal%402x.png') right top no-repeat;
  background-size: 40%;
}
.list2 .item .item-content .text{
  background: url('https://taidouapp.oss-cn-hangzhou.aliyuncs.com/xiaochengxu/user/yiSeal%402x.png') right top no-repeat;
  background-size: 40%;
}
.list3 .item .item-content .text{
  background: url('https://taidouapp.oss-cn-hangzhou.aliyuncs.com/xiaochengxu/user/yiquxiao%402x.png') right top no-repeat;
  background-size: 40%;
}
.nodata{
  background: #fff;
  text-align:center;
  width: 100%;
  padding-top: 50rpx;
  font-size: 30rpx;
}
