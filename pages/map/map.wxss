/* pages/map/map.wxss */
.map-bottom {
  position:fixed;
  bottom:0;
  background-color: #fff;
  padding: 40rpx 20rpx;
  width: 100%;
  font-size: 28rpx;
}


.map-bottom > cover-view {
  display: block;
  padding-bottom: 40rpx;
}
.logo {
  width: 140rpx;
  height: 140rpx;
  margin-left: 10rpx;
  margin-top: 20rpx;
}

.logo-box, .info-box {
  float: left;
}

.info-box {
  margin-left: 24rpx;
  vertical-align: middle;
}

.name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 32rpx;
}
.map-image {
  width: 32rpx;
  height: 32rpx;
  display: inline-block;
}

.connact cover-image, .connact cover-view {
  display: inline-block;
}

.address cover-image, .address cover-view {
  display: inline-block;
}

.address {
  margin-bottom: 22rpx;
}

.connact, .address {
  font-size: 26rpx;
  color: #666666;
  height: 38rpx;
  line-height: 38rpx;
  vertical-align: middle;
}

.ml10 {
  margin-left: 16rpx;
}

.daohang {
  width: 80rpx;
  height: 80rpx;
  margin-left: 50rpx;
  margin-top: 45rpx;
}