/* pages/demo/demo.wxss */
.tab{flex:1;text-align: center;padding: 10rpx 0; }
.topTabSwiper{ zoom: 1;width: 100%;display: flex;}
.topTabSwiper:after{content: ""; clear: both;display: block;}
.tabBorer{border-bottom: 1px solid #f00; color: #f00;}
.swiper{width: 100%;}
.swiper_con{text-align: center; width: 100%; height: 100%; padding: 20rpx 0;}
.hot-recommend .item{
  padding: 20rpx 30rpx 0 30rpx;
  height: 163rpx;
  border-top:1rpx solid #efefef;
  display: flex;
}
.hot-recommend .item .item-img{
  width: 224rpx;
  height: 134rpx;
}
.hot-recommend .item .item-img image{
  width: 224rpx;
  height: 134rpx;
}
.hot-recommend .item-text{
  padding-left: 20rpx;
  width: 436rpx;
  text-align: left;
}
.hot-recommend .item-text .title{
  font-size: 30rpx;
  color:#333;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  display: block;
}
.hot-recommend .item-text .desc{
  font-size: 26rpx;
  color:#666;
  display: block;
  margin-top: 16rpx;
}