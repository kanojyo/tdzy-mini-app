/* pages/articleInfo/index.wxss */
.container {
  display: flex;
  padding: 2%;
  
}

.article_title {
  font-size: .36rem;
  font-weight: bold;
  margin-bottom: .15rem;
}

.article_time {
  width: 100%;
  padding-left: 2%;
  color: #666;
} 

.middle-box {
  padding: 40rpx 0;
  text-align: center;
  margin-bottom: 40rpx;
}

.star-box, .share-box {
  border:1rpx solid #666;
  border-radius: 5rpx;
  display: inline-block;
  
}
.share-box {
  margin-left: 60rpx;
}
.icon{
  padding:  5rpx 20rpx;
  font-size: 40rpx;
}

.nums {
  font-size: 20rpx;
  text-align: center;
  background-color: #00CCFF;
  border-color: #00CCFF;
}

.buttom-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #fff;
  background-color: #0099FF;
  text-align: center;
  position: fixed;
  bottom: 0;
}

button {
  line-height: normal;
}

